#include <iostream>
#include <stdio.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int x,n;
    int b = 0;
    cout << "Введите размер массива: ";
    cin >> n;
    for (int i = 0; i<n; i++) {
        cin >> x ;
        b = b + x;
    }
    cout << "Сумма всех чисел: " << b;   
    return 0;  
}
